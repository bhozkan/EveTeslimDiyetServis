@model ETDS.Models.Menu

@{
    ViewBag.Title = "CreateMenu";
    Layout = "~/Views/Shared/_LayoutDiyetisyen.cshtml";
}

@using (Html.BeginForm("CreateMenu", "Diyetisyen", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<fieldset>
    <legend>Menu Ekle</legend>

    <div class="form-group">
        <label for="label" class="control-label">Ad</label>
        <div class="row">
            <div class="form-group">
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Ad, new { @class = "form-control", @type = "text" })
                    @Html.ValidationMessageFor(model => model.Ad)
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Öğün</label>
        <div class="row">
            <div class="form-group">
                <div class="col-md-5">
                    @Html.DropDownList("OgunId", (List<SelectListItem>)ViewBag.OgunList, "Öğün Seçiniz..", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OgunId)
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Paket</label>
        <div class="row">
            <div class="form-group">
                <div class="col-md-5">
                    @Html.DropDownList("PaketId", (List<SelectListItem>)ViewBag.PaketList, "Paket Seçiniz..", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaketId)
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="label" class="control-label">Açıklama</label>
        <div class="row">
            <div class="form-group">
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Aciklama, new { @class = "form-control", @type = "text" })
                    @Html.ValidationMessageFor(model => model.Aciklama)
                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="form-group col-md-offset-3">
        <div class="row">
            <a href="@Url.Action("ListMenu","Diyetisyen")" class="btn btn-default btn-large">İPTAL</a>    <input type="submit" value="EKLE" class="btn btn-primary btn-large" style="width:100px;" />
        </div>
    </div>
</fieldset>
}



