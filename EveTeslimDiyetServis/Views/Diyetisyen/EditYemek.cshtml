@model ETDS.Models.Yemek

@using (Html.BeginForm("EditYemek", "Diyetisyen", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><b>Yemek Düzenle</b></h3>
    </div>
    @Html.HiddenFor(model => model.Id)
    @Html.ValidationMessageFor(model => model.Id)
    <div class="panel-body">
        <div class="form-group">
            <label>Ad</label>
            @Html.TextBoxFor(model => model.Ad, new { @class = "form-control", @id = "ad" })
            @Html.ValidationMessageFor(model => model.Ad)
        </div>
        <div class="form-group">
            <label>Açıklama</label>
            @Html.TextBoxFor(model => model.Aciklama, new { @class = "form-control", @id = "aciklama" })
            @Html.ValidationMessageFor(model => model.Aciklama)
        </div>
        <div class="pull-right clearfix">
            <button type="submit" class="btn btn-primary btn-md">KAYDET</button>
            <a href="@Url.Action("ListYemek", "Diyetisyen", new { id = Model.Id })" class="btn btn-default btn-md">İPTAL</a>
        </div>
    </div>
</div>
}
